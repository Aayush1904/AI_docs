# Environment Variables Configuration
# Copy this file to .env.local and fill in your actual values

# ===========================================
# BACKEND API CONFIGURATION
# ===========================================
# Backend server URL (Express.js server)
# For local development: http://localhost:5001
# For production: https://your-backend.onrender.com
NEXT_PUBLIC_API_URL=http://localhost:5001

# Next.js API routes URL (usually empty for same domain)
# For local development: (empty)
# For production: (empty - same domain as frontend)
NEXT_PUBLIC_NEXT_API_URL=

# ===========================================
# AUTHENTICATION (CLERK)
# ===========================================
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=your_clerk_publishable_key
CLERK_SECRET_KEY=your_clerk_secret_key
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/search
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/search

# ===========================================
# DATABASE
# ===========================================
# PostgreSQL connection string
# For local development: postgresql://username:password@localhost:5432/neuraldocs
# For production: your_render_postgresql_url
DATABASE_URL=postgresql://username:password@localhost:5432/neuraldocs

# ===========================================
# AI SERVICES
# ===========================================
# Google Gemini API key
GEMINI_API_KEY=your_gemini_api_key

# ===========================================
# GITHUB INTEGRATION
# ===========================================
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret
GITHUB_TOKEN=your_github_personal_access_token

# ===========================================
# INTEGRATIONS
# ===========================================
# Notion Integration
NOTION_INTERNAL_SECRET=your_notion_internal_secret
NOTION_WORKSPACE_ID=your_notion_workspace_id

# JIRA Integration
JIRA_CLIENT_ID=your_jira_client_id
JIRA_CLIENT_SECRET=your_jira_client_secret
JIRA_REDIRECT_URI=your_jira_redirect_uri

# Slack Integration
SLACK_CLIENT_ID=your_slack_client_id
SLACK_CLIENT_SECRET=your_slack_client_secret
SLACK_REDIRECT_URI=your_slack_redirect_uri

# Google Drive Integration
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=your_google_redirect_uri

# ===========================================
# SERVER CONFIGURATION
# ===========================================
# Server port (automatically set by hosting platform)
PORT=5001

# Node environment
NODE_ENV=development

# CORS origin (for production)
CORS_ORIGIN=https://your-app.vercel.app
